@model Forum.WebApp.Models.EditPostViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Post.PostId" class="control-label"></label>
                <input asp-for="Post.PostId" class="form-control" value="@Model.Post.PostId" />
                <span asp-validation-for="Post.PostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <textarea rows="10" class="form-control" asp-for="Post.Content">@Model.Post.Content</textarea>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.TopicId" class="control-label"></label>
                <select class="form-control" asp-for="Post.TopicId" asp-items="@Model.Topics"></select>
                <span asp-validation-for="Post.TopicId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Post.MemberId" class="control-label"></label>
                <input asp-for="Post.MemberId" class="form-control" value="@Model.Post.MemberId" />
                <span asp-validation-for="Post.MemberId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label class="control-label"></label>
                <input class="form-control" asp-for="@Model.Direct" value="@Model.Direct" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
