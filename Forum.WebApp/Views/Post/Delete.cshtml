@model Forum.Domain.Post

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this post?</h3>
<div>
    <hr />
    <div class="card my-3">
        <input class="form-control" asp-for="PostId" hidden>
        <h3 class="card-header">@Model.Member.Username</h3>
        <div class="card-body">
            <h5 class="card-title">@Model.DateTime.ToString("dd-MM-yyyy")</h5>
            <p class="card-text">@Model.Content</p>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to my posts</a>
    </form>
</div>
